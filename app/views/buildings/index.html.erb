<h1>Buildings</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Address</th>
      <th>Full name of building administrator</th>
      <th>Email of building administrator</th>
      <th>Phone of building administrator</th>
      <th>Full name technical contact</th>
      <th>Technical contact email</th>
      <th>Technical contact phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.customer %></td>
        <td><%= building.address %></td>
        <td><%= building.full_name_of_building_administrator %></td>
        <td><%= building.email_of_building_administrator %></td>
        <td><%= building.phone_of_building_administrator %></td>
        <td><%= building.full_name_technical_contact %></td>
        <td><%= building.technical_contact_email %></td>
        <td><%= building.technical_contact_phone %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

