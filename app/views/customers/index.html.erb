<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Users</th>
      <th>Company name</th>
      <th>Address</th>
      <th>Full name of contact</th>
      <th>Company phone</th>
      <th>Email of contact</th>
      <th>Full name of service authority</th>
      <th>Technical authority phone</th>
      <th>Technical authority email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.users %></td>
        <td><%= customer.company_name %></td>
        <td><%= customer.address %></td>
        <td><%= customer.full_name_of_contact %></td>
        <td><%= customer.company_phone %></td>
        <td><%= customer.email_of_contact %></td>
        <td><%= customer.full_name_of_service_authority %></td>
        <td><%= customer.technical_authority_phone %></td>
        <td><%= customer.technical_authority_email %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

